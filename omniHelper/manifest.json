{
  "manifest_version": 3,
  "name": "Omnichat Appeal ID Tracker",
  "version": "1.0.0",
  "description": "Tracks and logs appeal IDs from omnichat.rt.ru PUT requests",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://omnichat.rt.ru/*",
    "*://*.omnichat.rt.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Appeal ID Tracker",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://omnichat.rt.ru/*",
        "*://*.omnichat.rt.ru/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}