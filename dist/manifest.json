{
  "manifest_version": 3,
  "name": "Omnichat Appeal ID Tracker (Refactored)",
  "version": "2.0.0",
  "description": "Tracks and logs appeal IDs from omnichat.rt.ru and provides auto-responses.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://omnichat.rt.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Appeal ID Tracker",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/main.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://omnichat.rt.ru/*"
      ],
      "js": [
        "shared/config.js",
        "shared/logger.js",
        "content/responder.js",
        "content/scanner.js",
        "content/main.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
